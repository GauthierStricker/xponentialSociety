<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <p>x</p>
        </button>
<div class="video-displayer-area">
    <div class="video-global-container">
      <% @video.topics.each do |topic| %>
        <div class="video-tag-top-information"><%= topic.name %></div>
      <%end %>
      <br>
      <!-- <p class="video-title-top-information"><%=@video.title %></p> -->
      <br>
      <div class="video-container">
        <div class="videoWrapper">
          <iframe id ="current-video" src='https://www.youtube.com/embed/<%= @video.youtube_id %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>
        </div>
      </div>
      <br>
      <div class="video-sub-container">
        <div class="speaker-photo"><%= cl_image_tag @video.speaker.profile_picture, height: 150, width: 150, alt: "Speaker Photo"%></div>
        <p class="title"><%=@video.title%></p>
        <p><span class="format"><%=@video.format%></span>      ·      <%= @video.original_date %>      ·     <%= @video.language %></p>
        <p> <span class="format">Speaker</span> : <%= link_to @video.speaker.name, @video.speaker.biography_link, :target => "_blank" %> ·<span class="format">Original Publisher</span> : <%= link_to @video.publisher, @video.publisher_link, :target => "_blank" %></p>
      </div>
      <br>
    </div>
  </div>
<script>
  $(".close").click(function(){
    $("iframe").remove();
  });
</script>
